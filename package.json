{
    "name": "Fizzbuzz",
    "description": "Fizzbuzz lambda kata",
    "version": "0.0.1",
    "private": true,
       "scripts": {
        "prebuild": "rm -rf dist",
        "clean": "rm -rf dist",
        "build": "esbuild src/handlers/*.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outdir=dist",
        "postbuild": "cd dist && zip -r package.zip *.js",
        "precommit": "npm-run-all -p clean lint types test build",
        "test": "jest",
        "test:ci": "jest test --watchAll=false --coverage=true",
        "lint": "eslint . --color --ext .ts --ignore-pattern 'node_modules/'",
        "lint:fix": "eslint . --ext .ts --ignore-pattern 'node_modules/' --fix",
        "types": "type-coverage -at-least 99",
        "types-report": "typescript-coverage-report --threshold 99",
        "prepare": "husky install"
    },

    "dependencies": {
        "aws-sdk": "^2.1204.0",
        "source-map-support": "^0.5.19"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.64",
        "@types/jest": "^26.0.14",
        "@types/node": "^18.7.11",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.8.3",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sonarjs": "^0.15.0",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "husky": "^8.0.1",
        "esbuild": "^0.15.5",
        "jest": "^26.6.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "ts-coverage": "^0.1.5",
        "ts-jest": "^26.4.3",
        "ts-node": "^10.9.1",
        "type-coverage": "^2.22.0",
        "typescript": "^4.0.5",
        "typescript-coverage-report": "^0.6.4"
    },
     "jest": {
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!lib/**/*.*",
      "!src/__test__/utils.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "project": "./tsconfig.eslint.json"
    },
    "plugins": [
      "prettier",
      "sonarjs",
      "jest",
      "@typescript-eslint",
      "simple-import-sort",
      "import"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "no-console": 0,
      "no-unused-vars": 0
    }
    }
}



