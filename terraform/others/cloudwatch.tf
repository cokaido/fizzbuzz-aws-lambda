//TODO : PARAMETRIZE LOGGING POLICY , perhaps put it on the bootstrap
resource "aws_iam_policy" "fizzbuzz_logging_policy" {
  name = "fizzbuzz_logging_policy"
  policy = jsonencode({
    "Version" : "2012-10-17",
    "Statement" : [
      {
        Action : [
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        Effect : "Allow",
        Resource : "arn:aws:logs:*:*:*"
      }
    ]
  })
}
resource "aws_iam_role_policy_attachment" "function_logging_policy_attachment" {
  role       = aws_iam_role.iam_for_lambda.id
  policy_arn = aws_iam_policy.fizzbuzz_logging_policy.arn
}


